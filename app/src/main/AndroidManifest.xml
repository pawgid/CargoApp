<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cargocrew.cargoapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_maps">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.MapsActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activities.RegistrationActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activities.LoginOptionsActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activities.ResetPasswordActivity" android:screenOrientation="portrait"></activity>


    </application>

</manifest>