<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cargocrew.cargoapp.MapsActivity"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/searchEditText" />



    <EditText
        android:id="@+id/searchEditText"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/map"
        android:layout_centerHorizontal="true"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:ems="10"
        android:layout_marginTop="35dp"
        android:hint="Enter start location"
        android:inputType="textPersonName" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/truckDetailBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="truckDetailBar"/>
        <Button
            android:text="del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/truckCargo"/>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/cargoDetailBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cargoDetailBar"/>
        <Button
            android:text="del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteCargo"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/addTruckBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:orientation="vertical">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="addTruckBar"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/addCargoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="addCargoBar"/>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ok" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonOpenSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/map"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="35dp"
        android:clickable="true"
        app:elevation="5dp"
        app:fabSize="mini"
        app:srcCompat="@drawable/plus_circle_outline" />

    <android.support.design.widget.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/floatingActionButtonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/map"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="35dp"
        android:clickable="true"
        app:elevation="5dp"
        app:fabSize="mini"
        app:srcCompat="@drawable/magnify" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:clickable="true"
        app:elevation="5dp"
        app:fabSize="mini"
        app:srcCompat="@drawable/cargo_icon" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingLoginOptionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/floatingActionButtonOpenSearch"
        android:layout_below="@+id/floatingActionButtonOpenSearch"
        android:layout_marginTop="30dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/three_dots" />


</RelativeLayout>
